extends ../layout
block content
    .container
        .row
            .col-sm-10.col-xs-10.col-md-8.col-lg-8.col-lg-offset-2.col-md-offset-2.col-sm-offset-2.col-xs-offset-1
                .page-header
                    h1 Sign In
        .row
            .col-sm-10.col-xs-10.col-md-8.col-lg-8.col-lg-offset-2.col-md-offset-2.col-sm-offset-2.col-xs-offset-1
                .well-sm
                    div.alert.alert-dismissable.alert-danger(style="display: none")#warningBar #{message}
                    if message.length > 0
                        script
                            $('#warningBar').show();
                    form.form-horizontal(action="/login",method="post")
                        .form-group
                            label Username
                            input.form-control(type="text",name="username", placeholder="username")
                        .form-group
                            label Password
                            input.form-control(type="password", name="password",placeholder="password")
                        button.btn.btn-warning.btn-lg(type="submit") Login

                p.text-info Don't have account? <a href='/signup' class='text-success'>Sign Up</a> today!